<!DOCTYPE html>
<html>
<head>
  <title><%= @page_title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/">HSD</a>
      <ul class="nav">
        <%= nav_link "Home", "/" %>
        <%= nav_link "Pages", "/wiki" %>
        <%= nav_link "New Page", "/wiki/new" if can_edit? %>
        <%= nav_link "About", "/about" %>
        <%= nav_link "All Users", admin_users_path if can_admin? %>
      </ul>
      <ul class="nav pull-right">
        <% if current_user %>
          <%= nav_link gravatar_for(current_user, size:30) + " " + current_user.name, 
                       current_user.url %>
          <%= nav_link "Sign Out", sign_out_path %>
        <% else %>
          <%= nav_link "Sign In", sign_in_path %>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="container">
  <div class="header row">
    <div class="span12">
      <% if notice %><div class="alert alert-info"><%= notice %></div><% end %>
      <% if alert %><div class="alert alert-error"><%= alert %></div><% end %>
      <h1>
        <%= @page_title %>
      </h1>
      <span class="subtitle">
        <%= @page_subtitle %>
      </span>
    </div>
  </div>
  <div class="row">
    <div class="span12">
      <%= yield %>
    </div>
  </div>
</div>

<footer>

</footer>

</body>
</html>
