<% page title:"Attachments" %>

<% subtitle link_to "Back", @page %>

<table class="table">
  <% @page.attachments.each do |attachment| %>
    <tr>
      <td><%= image_tag(attachment.url(:tiny), style:"height:50px") if attachment.is_image? %></td>
      <td><%= attachment.content_file_name %></td>
      <td><%= button_to "Delete", [@page, attachment], confirm:"Are you sure you want to delete this file?", method:"delete" %></td>
    </tr>
  <% end %>
</table>

<h3>Add an attachment</h3>
<%= form_for [@page, @page.attachments.build], html:{multipart:true} do |f| %>
  <%= f.file_field :content %>
  <%= f.submit "Upload", class:"btn btn-primary" %>
<% end %>

