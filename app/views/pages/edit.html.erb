<% page title:"Edit #{@page.name}", class:"form edit-wiki-page" %>

<% subtitle link_to("Manage Attachments", page_attachments_path(@page)) %>
<% subtitle link_to("Old Versions", page_versions_path(@page)) %>
<% subtitle button_to("Delete", page_path(@page), method:"delete", confirm:"Are you sure you want to delete this page?", class:"btn-danger", icon:"remove") %>
        
<%= form_for @page, url:page_path(@page), html:{multipart:true} do |f| %>
  <%= render_errors @page %>
  <%= render partial:"form", locals:{f:f} %>
<% end %>
