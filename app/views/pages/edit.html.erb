<% page title:"Edit #{@page.name}", class:"form edit-wiki-page" %>

<% subtitle raw [
    link_to("Old Versions", page_versions_path(@page)),  
    button_to("Delete", page_path(@page), method:"delete", confirm:"Are you sure you want to delete this page?", class:"btn-danger", icon:"remove")].join(" ") %>
        
<%= form_for @page, url:page_path(@page), html:{multipart:true} do |f| %>
  <%= render_errors @page %>
  <%= render partial:"form", locals:{f:f} %>
<% end %>
